# Database Configuration
DATABASE_URL="file:./dev.db"
TEST_DATABASE_URL="file:./test.db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production-minimum-256-bits"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Next.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-generate-with-openssl-rand-base64-32"

# Application Configuration
NODE_ENV="development"
NEXT_PUBLIC_APP_NAME="Family Learning Web"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# Feature Flags
NEXT_PUBLIC_ENABLE_REGISTRATION="true"
NEXT_PUBLIC_ENABLE_GUEST_MODE="false"
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_DEBUG="true"

# Security Configuration
BCRYPT_ROUNDS="12"
SESSION_COOKIE_NAME="family-learning-session"
SESSION_MAX_AGE="86400000"
SECURE_COOKIES="false"
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="15"

# File Upload Configuration
UPLOAD_MAX_SIZE="10485760"
UPLOAD_DIR="./uploads"
ALLOWED_FILE_TYPES="csv,txt,xlsx,json"
MAX_FILES_PER_UPLOAD="10"

# Email Configuration (Optional)
# EMAIL_FROM="noreply@family-learning.com"
# EMAIL_SERVER_HOST="smtp.example.com"
# EMAIL_SERVER_PORT="587"
# EMAIL_SERVER_USER="username"
# EMAIL_SERVER_PASSWORD="password"
# EMAIL_SERVER_SECURE="true"

# External Services (Optional)
# VOCABULARY_API_KEY="your-vocabulary-api-key"
# GOOGLE_TRANSLATE_API_KEY="your-translate-api-key"
# OPENAI_API_KEY="your-openai-api-key"

# Analytics and Monitoring (Optional)
# GOOGLE_ANALYTICS_ID="your-analytics-id"
# SENTRY_DSN="your-sentry-dsn"
# POSTHOG_API_KEY="your-posthog-key"

# Logging Configuration
LOG_LEVEL="info"
LOG_FILE="./logs/app.log"
ENABLE_REQUEST_LOGGING="true"
ENABLE_PERFORMANCE_LOGGING="false"

# Development Configuration
SKIP_BUILD_STATIC_GENERATION="false"
DISABLE_TELEMETRY="true"
ANALYZE_BUNDLE="false"
SKIP_ENV_VALIDATION="false"

# iPad Unlock System
IPAD_UNLOCK_ENABLED="true"
MAX_DAILY_UNLOCK_MINUTES="240"
DEFAULT_UNLOCK_MINUTES="15"
PARENT_APPROVAL_REQUIRED="false"

# Content Management
ENABLE_CSV_IMPORT="true"
MAX_QUESTIONS_PER_IMPORT="1000"
AUTO_VALIDATE_IMPORTS="true"

# Queensland Curriculum Integration
QLD_CURRICULUM_VERSION="9.0"
ACARA_INTEGRATION_ENABLED="true"
ENABLE_CURRICULUM_VALIDATION="true"

# Performance Configuration
CACHE_MAX_AGE="3600"
ENABLE_PWA="false"
CDN_URL=""

# Backup Configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"

# Accessibility Configuration
ENABLE_A11Y_CHECKS="true"
CONTRAST_THRESHOLD="4.5"
SCREEN_READER_SUPPORT="true"